{
  "manifest_version": 2,
  "name": "vx",
  "summary": "This extension listens to you and copies what you said to the clipboard.",
  "version": "0.3.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "commands": {
    "listen1": {
      "description": "Listen [first language]",
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      }
    },
    "listen2": {
      "description": "Listen [second language]",
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      }
    }
  },
  "background": {
    "page": "background.html"
  },
  "permissions": ["clipboardWrite", "notifications", "storage", "activeTab"],

  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": { "512": "icon.png" },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": ["popup.html"]
}
